                                    "        \"non_ssl_port\": \"8083\",",
                                    "        \"ssl_port\": \"4433\"",
                                    "      }, ",
                                    "      \"rabbitmq\": {",
                                    "        \"data_dir\": \"/mnt/storage/chef-server/rabbitmq/data\"",
                                    "      }, ",
