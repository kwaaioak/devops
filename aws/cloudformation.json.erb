<%  if defined? one_reverse_proxy %>
                                    "        ,",
<%  one_reverse_proxy = true end %>
                                    "        \"bamboo\": {",
                                    { "Fn::Join": [ "", [
                                        "            \"node_name\": \"bamboo.", { "Ref": "ZoneName" }, "\","
                                    ] ] }, 
                                    "            \"port\": 8085,",
                                    "            \"force_ssl\": false",
                                    "        }",
