        }, 
        "DevOpsServerUser": {
            "Type": "AWS::IAM::User",
            "Properties": {
                "Path": "/", 
                "Policies": [
                    {
                        "PolicyName": "cloudformation",
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": "cloudformation:DescribeStackResource", 
                                    "Effect": "Allow", 
                                    "Resource": "*"
                                }
                            ]
                        }
                    }, 
                    {
                        "PolicyName": "ec2",
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [ "ec2:*" ], 
                                    "Effect": "Allow", 
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        }, 
        "DevOpsServerVolume": {
            "DeletionPolicy": "Snapshot",
            "Properties": {
                "AvailabilityZone": { "Ref": "AvailabilityZone" }, 
                "Iops": 100, 
                "Size": 15, 
                "SnapshotId": {
                    "Fn::If": [
                        "CreateFromSnapshot",
