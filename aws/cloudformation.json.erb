                                    "        \"jenkins\": {",
                                    { "Fn::Join": [ "", [
                                        "            \"node_name\": \"jenkins.", { "Ref": "ZoneName" }, "\","
                                    ] ] },
                                    "            \"port\": 8090,",
                                    "            \"force_ssl\": true",
                                    "        }",
<% end %>
<% if !@services.any? or @services.include? 'chef' %>
<%  if defined? one_reverse_proxy %>
                                    "        ,",
<%  one_reverse_proxy = true end %>
                                    "        \"chef\": {",
                                    { "Fn::Join": [ "", [
                                        "            \"node_name\": \"chef.", { "Ref": "ZoneName" }, "\","
                                    ] ] }, 
                                    "            \"port\": 8083,",
                                    "            \"force_ssl\": false",
                                    "        }",
<% end %>
<% if !@services.any? or @services.include? 'jira' %>
<%  if defined? one_reverse_proxy %>
                                    "        ,",
<%  one_reverse_proxy = true end %>
                                    "        \"jira\": {",
                                    { "Fn::Join": [ "", [
                                        "            \"node_name\": \"jira.", { "Ref": "ZoneName" }, "\","
                                    ] ] }, 
                                    "            \"port\": 8080,",
                                    "            \"force_ssl\": false",
                                    "        }",
<% end %>
