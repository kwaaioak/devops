<% if !@services.any? or @services.include? 'jenkins' %>
                    {
                        "Name": { "Fn::Join": [ "", [ "jenkins.", { "Ref": "ZoneName" }, "." ]] }, 
                        "ResourceRecords": [
                            { "Fn::Join": [ "", [ "ops.", { "Ref": "ZoneName" }, "." ] ] }
                        ], 
                        "TTL": "900", 
                        "Type": "CNAME"
